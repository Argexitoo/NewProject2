<main role="main" class="inner cover">
  <div class="text-center pt-3">
    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
      <form class="form-signin" action="/profile-mymeeting/{{id}}/edit" method="post">
        <img class="mb-4" src="https://cdn2.iconfinder.com/data/icons/dogs-vol-2/320/dog-events-512.png" alt=""
          width="172" height="172">
        <h1 class="h3 mb-3 font-weight-normal">Update your meeting!</h1>
        <h3>Name</h3><input type="text" name="name" class="form-control" value="{{editMeeting.name}}" required="">
        <h3>Location</h3><input type="text" name="location" class="form-control" value="{{editMeeting.location}}"
          required="">
        <h3>Date</h3><input type="date" name="date" class="form-control" value="{{editMeeting.date}}">
        <h3>Hour</h3><input type="text" name="hour" class="form-control" value="{{editMeeting.hour}}" required="">
        <h3>Description</h3><input type="text" name="description" class="form-control"
          value="{{editMeeting.description}}" required="">
        <button class="btn btn-lg btn-primary btn-block sign-btn-home " type="submit">Update</button>
        {{#if errorMessage}}
        <p>{{errorMessage}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</main>