<main role="main" class="inner cover">
    <div class="text-center pt-3">
        <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
            <form class="form-signin" action="/profile-newmeeting" method="post">
                <img class="mb-4" src="https://cdn2.iconfinder.com/data/icons/dogs-vol-2/320/dog-events-512.png" alt=""
                    width="172" height="172">
                <h1 class="h3 mb-3 font-weight-normal">Add a new meeeting!</h1>
                <input type="text" name="name" class="form-control" placeholder="Name" required="">
                <input type="text" name="location" class="form-control" placeholder="Location" required="">
                <input type="date" name="date" class="form-control" placeholder="Date" required="">
                <input type="text" name="hour" class="form-control" placeholder="Hour" required="">
                <input type="text" name="description" class="form-control" placeholder="Description" required="">
                <button class="btn btn-lg btn-primary btn-block sign-btn-home " type="submit">Create</button>
                {{#if errorMessage}}
                <p>{{errorMessage}}</p>
                {{/if}}
            </form>
        </div>
    </div>
