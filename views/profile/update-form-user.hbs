        <h3>Location</h3><input type="text" name="location" class="form-control" value="{{editUser.location}}">
        <h3>Age</h3><input type="number" name="age" class="form-control" value="{{editUser.age}}">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
